                </div>
            </div>
        </div>
    </div>
</div>


<!-- JavaScript -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        console.log("DOM Loaded");

        const editBtn = document.getElementById("editBtn");
        const saveBtn = document.getElementById("saveBtn");

        if (editBtn && saveBtn) {
            editBtn.addEventListener("click", function () {
                document.querySelectorAll("input").forEach(input => input.removeAttribute("disabled"));
                saveBtn.classList.remove("d-none");
                this.classList.add("d-none");
            });

            saveBtn.addEventListener("click", async function () {
                let userData = {
                    Id: @Model.Id,
                    FullName: document.getElementById("fullName")?.value || "@Model.FullName",
                    Email: document.getElementById("email")?.value || "@Model.Email",
                    PhoneNumber: document.getElementById("phone")?.value || "@Model.PhoneNumber",
                    Address: document.getElementById("address")?.value || "@Model.Address"
                };

                console.log("Sending data:", userData);

                let response = await fetch("/User/Profile/Edit", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(userData)
                });

                if (response.ok) {
                    // Sử dụng SweetAlert2 để hiển thị thông báo thành công
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'Profile updated successfully!',
                        confirmButtonText: 'OK'
                    }).then(() => {
                        // Sau khi người dùng nhấn OK, disable các input và cập nhật giao diện
                        document.querySelectorAll("input").forEach(input => input.setAttribute("disabled", "true"));
                        saveBtn.classList.add("d-none");
                        editBtn.classList.remove("d-none");
                    });
                } else {
                    // Sử dụng SweetAlert2 để hiển thị thông báo thất bại
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: 'Update failed!',
                        confirmButtonText: 'OK'
                    });
                }
            });
        }
    });

    document.addEventListener("DOMContentLoaded", function () {
        const togglePassword = document.getElementById("togglePassword");
        const passwordInput = document.getElementById("password");

        if (togglePassword && passwordInput) {
            togglePassword.addEventListener("click", function () {
                if (passwordInput.type === "password") {
                    passwordInput.type = "text";
                    togglePassword.innerHTML = '<i class="bx bx-hide"></i>';
                } else {
                    passwordInput.type = "password";
                    togglePassword.innerHTML = '<i class="bx bx-show"></i>';
                }
            });
        }
    });
</script>

