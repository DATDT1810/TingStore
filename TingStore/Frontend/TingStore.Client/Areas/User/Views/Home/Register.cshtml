@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TingStore.Client.Areas.User.Models.Authen.RegisterRequest
@{
    Layout = "";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0" style="align-items:center; justify-content:center">

                        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                            <div class="col-12 col-lg-11 col-xl-10">
                                <div class="card-body p-3 p-md-4 p-xl-5">
                                    <div class="text-center mb-4">
                                        <a asp-area="User" asp-controller="Home" asp-action="Index">
                                            <img src="~/user/assets/media/logoweb.png" alt="BootstrapBrain Logo" style="width: 175px; height: 120px; object-fit: contain;">
                                        </a>
                                    </div>
                                    <h4 class="text-center">Create New User</h4>
                                    <div class="d-flex gap-3 flex-column">
                                    </div>

                                    <form method="post" asp-area="User" asp-controller="Home" asp-action="Register">
                                        <div class="row gy-3 overflow-hidden">
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Email" name="Email" class="form-control"
                                                           placeholder="name@example.com">
                                                    <label asp-for="Email"
                                                           class="form-label">Email</label>
                                                    <span asp-validation-for="Email"
                                                          class="text-danger fst-italic"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Password" name="Password" type="password"
                                                           class="form-control" placeholder="Password">
                                                    <label asp-for="Password"
                                                           class="form-label">Password</label>
                                                    <span asp-validation-for="Password"
                                                          class="text-danger fst-italic"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="ConfirmPassword" name="ConfirmPassword" type="password"
                                                           class="form-control" placeholder="Confirm Password">
                                                    <label asp-for="ConfirmPassword"
                                                           class="form-label">Confirm Password</label>
                                                    <span asp-validation-for="ConfirmPassword"
                                                          class="text-danger fst-italic"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="d-grid">
                                                    <button class="btn btn-dark btn-lg" type="submit">
                                                        Register
                                                        Now
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-2">
                                                <a asp-action="Login" class="link-secondary text-decoration-none">Back To Login</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
