@model TingStore.Client.Areas.User.Models.Authen.AuthenRequest

@{
    //  Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0" style="align-items:center; justify-content:center">

                        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                            <div class="col-12 col-lg-11 col-xl-10">
                                <div class="card-body p-3 p-md-4 p-xl-5">
                                    <div class="text-center mb-4">
                                        <a asp-area="User" asp-controller="Home" asp-action="Index">
                                            <img src="~/user/assets/media/logoweb.png" alt="BootstrapBrain Logo" style="width: 175px; height: 120px; object-fit: contain;">
                                        </a>
                                    </div>
                                    <h4 class="text-center">Welcome back you've been missed!</h4>

                                    <div class="d-flex gap-5 flex-column">
                                    </div>


                                    <form asp-area="User" asp-controller="Home" asp-action="Login" method="post" class="form-control">
                                        @Html.AntiForgeryToken()
                                        <div class="row gy-3 overflow-hidden">
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Email" type="text" class="form-control" name="Email" autocomplete="on" placeholder="name@example.com" required>
                                                    <label for="Email" class="form-label">Email</label>
                                                    <span asp-validation-for="Email" class="text-warning"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Password" type="password" class="form-control" name="Password" id="Password" value="" placeholder="Password" required>
                                                    <label for="Password" class="form-label">Password</label>
                                                    <span asp-validation-for="Password" class="text-warning"></span>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="d-grid">
                                                    <button class="btn btn-dark btn-lg" type="submit">Login now</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-2">
                                                <a asp-area="User" asp-controller="Home" asp-action="Register" class="link-secondary text-decoration-none">Register</a>
                                                <a asp-area="User" asp-controller="Home" asp-action="ForgetPassword" class="link-secondary text-decoration-none">Forgot password</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
